#!/usr/bin/env sh

if [ $(id -u) != "0" ]
then
echo 'must be run as root'
exit 1
fi

function _a ( ) {
  if pacman -Qi "$1" 2>/dev/null;
    pacman -R "$1"
  fi
}

function _p ( ) {
  { pacman -Ss "$1" | grep '\[installed\]' 1>/dev/null ; } || { pip show "$2" && pip uninstall "$2" ; }
}

function _n ( ) {
  if ls "$(npm root -g)" --color=never | grep '^'"$1"'$' 1>/dev/null 2>&1 ; then
    npm uninstall -g "$1"
  fi
}

_a fzf
_a st
_a rxvt-unicode
_a keybase-release
_a xkblayout-state
